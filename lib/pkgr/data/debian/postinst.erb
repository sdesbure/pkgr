#!/bin/sh
# postinst script for $NAME
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

NAME="<%= name %>"
PREFIX="<%= prefix %>"
USER="<%= user %>"
GROUP="<%= group %>"

case "$1" in
    configure)

        if [ ! -f $PREFIX/$NAME/bin/$NAME.rb ]; then 
          mv $PREFIX/$NAME/bin/$NAME $PREFIX/$NAME/bin/$NAME.rb
        fi
        echo "#!/usr/bin/ruby1.9.1
        require '$PREFIX/$NAME/bin/$NAME'
        " > /usr/bin/$NAME && chmod a+x /usr/bin/$NAME
        # Creating the user if it does not exist
        if ! getent passwd $USER > /dev/null; then
          echo "new install detected: "
          echo "  * creating system user"
          adduser --no-create-home --system --group $GROUP
          echo "  * creating db user"
          su - postgres -c 'createuser -d -S -R rails'
          echo "  * creating db table"
          su - postgres -c "createdb -O $USER cpe_conf_production"
          echo "  * copying nginx configuration"
          rm /etc/nginx/sites-enabled/default
          ln -s /etc/nginx/sites-available/$NAME.conf /etc/nginx/sites-enabled/
          /etc/init.d/nginw reload
          fresh_install = true
        fi
        chown -R $USER.$GROUP /etc/$NAME/
        chown -R $USER.$GROUP /var/db/$NAME/
        chown -R $USER.$GROUP /var/log/$NAME/
        chown -R $USER.$GROUP $PREFIX/$NAME
        if !$fresh_install ; then
          echo "upgrade detected:"
        fi
        echo "  * migrating the database"
        su - -c "cd $APP_ROOT && RAILS_ENV='production' GEM_HOME=$GEM_HOME $GEM_HOME/bin/rake db:migrate" -s /bin/bash $USER

        if $fresh_install ; then
          echo "  * bootstrapping the system"
          su - -c "cd $APP_ROOT && RAILS_ENV='production' GEM_HOME=$GEM_HOME $GEM_HOME/bin/bundle exec rake setup" -s /bin/bash $USER
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


